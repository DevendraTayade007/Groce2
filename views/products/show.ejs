<%- include('../partials/header', { title: product.name }) %>

<div class="row">
  <div class="col-md-6">
  <img src="<%= product.imageUrl || 'https://via.placeholder.com/600' %>" onerror="this.onerror=null;this.src='https://via.placeholder.com/600'" class="img-fluid" alt="<%= product.name %>">
  </div>
  <div class="col-md-6">
    <h2><%= product.name %></h2>
    <p class="text-muted">Category: <%= product.category %></p>
    <p><%= product.description %></p>
  <h4>Rs <%= product.price.toFixed(2) %></h4>
    <p>Stock: <%= product.stock %></p>
    <form action="/cart/add/<%= product._id %>" method="post">
      <button class="btn btn-success">Add to cart</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
