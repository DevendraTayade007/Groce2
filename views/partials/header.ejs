<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title || 'Groc Store' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Groc Store</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/products">Products</a></li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if (!currentUser) { %>
            <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/auth/signup">Signup</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="#">Hello, <%= currentUser.name %></a></li>
            <% if (currentUser.isAdmin) { %>
              <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Admin</a></li>
            <% } %>
            <li class="nav-item">
              <form action="/auth/logout" method="post" class="d-inline">
                <button class="btn btn-link nav-link">Logout</button>
              </form>
            </li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
