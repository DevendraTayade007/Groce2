<%- include('../partials/header', { title: 'Cart' }) %>

<h1>Your Cart</h1>
<% if (!cart || cart.length === 0) { %>
  <p>Your cart is empty.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0; cart.forEach(function(i){ total += i.price * i.quantity; %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.quantity %></td>
          <td>$<%= (i.price * i.quantity).toFixed(2) %></td>
          <td>
            <form action="/cart/remove/<%= i.product %>" method="post">
              <button class="btn btn-sm btn-danger">Remove</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <h4>Total: Rs <%= total.toFixed(2) %></h4>
  <form action="/cart/checkout" method="post">
    <button class="btn btn-primary">Checkout</button>
  </form>
<% } %>

<%- include('../partials/footer') %>
