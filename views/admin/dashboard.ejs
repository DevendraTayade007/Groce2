<%- include('../partials/header', { title: 'Admin Dashboard' }) %>

<h1>Admin Dashboard</h1>
<a href="/admin/add-product" class="btn btn-success mb-3">Add product</a>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Stock</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(function(p){ %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.category %></td>
  <td>Rs <%= p.price.toFixed(2) %></td>
        <td><%= p.stock %></td>
        <td>
          <a href="/admin/edit/<%= p._id %>" class="btn btn-sm btn-primary">Edit</a>
          <form action="/admin/delete/<%= p._id %>" method="post" style="display:inline">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
